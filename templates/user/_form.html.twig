{{ form_start(form) }}

    <div class="row mt-4">
        <div class="row">
            <div class="col-2">{{ form_label(form.email) }}</div>
            <div class="col-10">{{ form_widget(form.email) }}</div>
        </div>
        
    </div>
    
    <div class="row mt-4 mb-4">
        <div class="row">
            <div class="col-2">{{ form_label(form.roles) }}</div>
            <div class="col-10">
                {% for child in form.roles.children %}
                    <div class="form-check mt-4">
                    
                        {{ form_widget(child, {'attr': {'class': 'form-check-input'}}) }}
                        <label class="form-check-label" for="{{ child.vars.id }}" >{{ child.vars.label }}</label> 

                    </div>  
                {% endfor %}
            </div>
        </div>
    </div>

    <div class="row-mt-4">
        <div class="row">
            <div class="col-2">{{ form_label(form.lastname) }}</div>
            <div class="col-10">{{ form_widget(form.lastname) }}</div>
        </div>
        
    </div>

    <div class="row mt-4">
        <div class="row">
            <div class="col-2">{{ form_label(form.firstname) }}</div>
            <div class="col-10">{{ form_widget(form.firstname) }}</div>
        </div>
    </div>

    <div class="row mt-4">
        <div class="row">
            <div class="col-2">{{ form_label(form.adresseNumber) }}</div>
            <div class="col-10">{{ form_widget(form.adresseNumber) }}</div>
        </div>
    </div>

    <div class="row mt-4">
        <div class="row">
            <div class="col-2">{{ form_label(form.streetName) }}</div>
            <div class="col-10">{{ form_widget(form.streetName) }}</div>
        </div>
    </div>

    <div class="row mt-4">
        <div class="row">
            <div class="col-2"> {{ form_label(form.postalCode) }}</div>
            <div class="col-10">{{ form_widget(form.postalCode) }}</div>
        </div>
       
    </div>

    <div class="row mt-4">
        <div class="row">
            <div class="col-2">{{ form_label(form.city) }}</div>
            <div class="col-10">{{ form_widget(form.city) }}</div>
        </div>
    </div>

    <div class="row mt-4">
        <div class="row">
            <div class="col-2">{{ form_label(form.country) }}</div>
            <div class="col-10">{{ form_widget(form.country) }}</div>
        </div>
    </div>

    <div class="row mt-4">
        <div class="row">
            <div class="col-2">{{ form_label(form.phoneNumber) }}</div>
            <div class="col-10">{{ form_widget(form.phoneNumber) }}</div>
        </div>
    </div>
    
    <div class="row mt-4">
        <div class="row">
            <div class="col-2">Date of birth</div>
            <div class="col-10">
                {% for child in form.dateOfBirth.children %}
                    <div class="form-group col-4">
                        <label class="form-check-label" for="{{ child.vars.id }}" >{{ child.vars.name }}</label> 
                        {{ form_widget(child, {'attr': {'class': 'form-control'}}) }}
                    </div>  
                {% endfor %}
            </div>
        </div>
     </div>

    <button class="btn">{{ button_label|default('Save') }}</button>
{{ form_end(form) }}
